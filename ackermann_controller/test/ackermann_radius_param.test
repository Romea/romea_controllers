<launch>
  <!-- Load common test stuff -->
  <include file="$(find ackermann_controller)/test/ackermann_common.launch" />

  <!-- Override robot_description with sphere wheel urdf -->
  <param name="robot_description"
         command="$(find xacro)/xacro '$(find ackermann_controller)/test/ackermann_sphere_wheels.xacro'" />
  <!-- Provide the radius, since the bot's wheels are spheres, not cylinders -->
  <param name="ackermann_controller/wheel_radius" value="0.11"/>

  <!-- Controller test -->
  <test test-name="ackermann_wheel_radius_param_test"
        pkg="ackermann_controller"
        type="ackermann_test"
        time-limit="80.0">
    <remap from="cmd_vel" to="ackermann_controller/cmd_vel" />
    <remap from="odom" to="ackermann_controller/odom" />
  </test>
</launch>
