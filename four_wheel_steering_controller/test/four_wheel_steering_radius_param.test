<launch>
  <!-- Load common test stuff -->
  <include file="$(find four_wheel_steering_controller)/test/launch/four_wheel_steering_common.launch" />

  <!-- Override robot_description with sphere wheel urdf -->
  <param name="robot_description"
         command="$(find xacro)/xacro '$(find four_wheel_steering_controller)/urdftest/four_wheel_steering_sphere_wheels.xacro'" />
  <!-- Provide the radius, since the bot's wheels are spheres, not cylinders -->
  <param name="four_wheel_steering_controller/wheel_radius" value="0.11"/>

  <!-- Controller test -->
  <test test-name="four_wheel_steering_wheel_radius_param_test"
        pkg="four_wheel_steering_controller"
        type="four_wheel_steering_test"
        time-limit="80.0">
    <remap from="cmd_vel" to="four_wheel_steering_controller/cmd_vel" />
    <remap from="odom" to="four_wheel_steering_controller/odom" />
  </test>
</launch>
